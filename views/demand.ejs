<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Orders</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles2.css"> <!-- Ensure this file exists in your public directory -->
</head>
<body>
    <div class="container">
        <h1 class="text-center my-4">Food Orders</h1>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Food Item</th>
                    <th>Orders Count</th>
                </tr>
            </thead>
            <tbody>
                <% if (locals.orders.length > 0) { %>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td><%= order.fooditem %></td>
                            <td><%= order.count %></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="2" class="text-center">Canteen is free</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <img src="./assets/images/shape-5.png" width="921" height="1036" loading="lazy" alt="shape"
     class="shape shape-2 move-anim">
    <img src="./assets/images/shape-4.png" width="343" height="345" loading="lazy" alt="shape"
     class="shape shape-3 move-anim">

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
